pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                checkout([$class: 'GitSCM',
                          branches: [[name: '*/main']],
                          userRemoteConfigs: [[url: 'https://github.com/SycSin/MyRecipes.git']]
                ])
            }
        }
        stage('Building Backend') {
            steps {
                dir('backend') {
                    backendImage = docker.build("localhost:5000/myrecipes-backend:${env.BUILD_NUMBER}")
                }
            }
        }
        stage('Building Frontend') {
            steps {
                dir('frontend') {
                    frontendImage = docker.build("localhost:5000/myrecipes-frontend:${env.BUILD_NUMBER}")
                }
            }
        }
        stage('Pushing Backend') {
            steps {
                script {
                    docker.withRegistry("http://localhost:5000") {
                        backendImage.push()
                    }
                }
            }
        }
        stage('Pushing Frontend') {
            steps {
                script {
                    docker.withRegistry("http://localhost:5000") {
                        frontendImage.push()
                    }
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}