pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                checkout([$class: 'GitSCM',
                          branches: [[name: '*/main']],
                          userRemoteConfigs: [[url: 'https://github.com/SycSin/MyRecipes.git']]
                ])
            }
        }
        stage('Build Backend') {
            steps {
                dir('backend') {
                    script {
                        backendImage = docker.build("localhost:5000/myrecipes-backend:${env.BUILD_NUMBER}")
                    }
                }
            }
        }
        stage('Build Frontend') {
            steps {
                dir('frontend') {
                    script {
                        frontendImage = docker.build("localhost:5000/myrecipes-frontend:${env.BUILD_NUMBER}")
                    }
                }
            }
        }
        stage('Push Backend') {
            steps {
                script {
                    docker.withRegistry("http://localhost:5000") {
                        backendImage.push()
                    }
                }
            }
        }
        stage('Push Frontend') {
            steps {
                script {
                    docker.withRegistry("http://localhost:5000") {
                        frontendImage.push()
                    }
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}