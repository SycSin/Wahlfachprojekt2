pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                script {
                    checkout([$class: 'GitSCM',
                              branches: [[name: '*/main']],
                              userRemoteConfigs: [[url: 'git@github.com:SycSin/MyRecipes.git']],
                              credentialsId: 'jenkins-private-key'
                    ])
                }
            }
        }
        stage('Backend') {
            steps {
                dir('backend') {
                    script {
                        def backendImage = docker.build("registry:5000/myrecipes-backend:${env.BUILD_NUMBER}")
                        docker.withRegistry('registry:5000') {
                            backendImage.push()
                        }
                    }
                }
            }
        }
        stage('Frontend') {
            steps {
                dir('frontend') {
                    script {
                        def frontendImage = docker.build("registry:5000/myrecipes-frontend:${env.BUILD_NUMBER}")
                        docker.withRegistry('registry:5000') {
                            frontendImage.push()
                        }
                    }
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}