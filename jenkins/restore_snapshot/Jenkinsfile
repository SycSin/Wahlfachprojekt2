pipeline {
    agent any

    parameters {
        choice(
            choices: 'worker01\nworker02\nworker03',
            description: 'Select the worker',
            name: 'WORKER'
        )
    }

    stages {
        stage('Run rsync on Worker') {
            steps {
                script {
                    def worker = params.WORKER
                    echo "Selected worker: $worker"

                    // Define the target host and SSH credentials ID
                    def user = "root"
                    def targetHost = "192.168.1.210"
                    def sshCredentials = "jenkins-private-key"

                    // Define SSH agent credentials
                    def sshCredentialsStep = [
                        $class: 'org.jenkinsci.plugins.credentialsbinding.impl.BindingStep',
                        credentialsId: sshCredentials,
                        variable: 'SSH_PRIVATE_KEY'
                    ]

                    // Execute rsync command using withCredentials block
                    withCredentials([sshCredentialsStep]) {
                        sh "ssh -o StrictHostKeyChecking=no -l ${user} -i <<< \$SSH_PRIVATE_KEY ${targetHost} rsync -a --delete /mnt/ssd/nfs/worker-base-template/ /mnt/ssd/nfs/${worker}"
                    }
                }
            }
        }
    }
}

