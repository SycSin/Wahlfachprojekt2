import groovy.json.JsonSlurperClassic

pipeline {
    agent any

    parameters {
        choice(
            choices: 'worker01\nworker02\nworker03',
            description: 'Select the worker',
            name: 'WORKER'
        )
    }

    stages {
        stage('Run rsync on Worker') {
            steps {
                script {
                    def worker = params.WORKER
                    echo "Selected worker: $worker"

                    // Define the target host and SSH credentials ID
                    def user = "root"
                    def targetHost = "192.168.1.210"
                    def sshCredentials = "jenkins-private-key"

                    // Retrieve the base64-encoded SSH private key
                    def privateKeyBase64 = credentials("${sshCredentials}")

                    // Convert the base64 string to byte[] and decode to get the original SSH private key
                    def privateKeyBytes = privateKeyBase64.getBytes()
                    def privateKey = privateKeyBytes.decodeBase64().toString()

                    // Execute rsync command using withCredentials block
                    withCredentials([sshUserPrivateKey(credentialsId: sshCredentials, keyFileVariable: 'SSH_PRIVATE_KEY')]) {
                        // Use echo and pipe to pass the private key to ssh command
                        sh "echo '\${SSH_PRIVATE_KEY}' | ssh -o StrictHostKeyChecking=no -l ${user} -i /dev/stdin ${targetHost} rsync -a --delete /mnt/ssd/nfs/worker-base-template/ /mnt/ssd/nfs/${worker}"
                    }
                }
            }
        }
    }
}

