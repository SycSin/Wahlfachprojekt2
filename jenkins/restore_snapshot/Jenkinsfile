import groovy.json.JsonSlurperClassic

pipeline {
    agent any

    parameters {
        choice(
            choices: 'worker01\nworker02\nworker03',
            description: 'Select the worker',
            name: 'WORKER'
        )
    }

    stages {
        stage('Run rsync on Worker') {
            steps {
                script {
                    def worker = params.WORKER
                    echo "Selected worker: $worker"

                    // Define the target host and SSH credentials ID
                    def user = "root"
                    def targetHost = "192.168.1.210"
                    def sshCredentials = "jenkins-private-key"

                    // Retrieve the SSH private key using the 'withCredentials' block
                    def privateKey = withCredentials([sshUserPrivateKey(credentialsId: sshCredentials, keyFileVariable: 'SSH_PRIVATE_KEY')]) {
                        // Read the private key file and store it in a variable
                        sh(returnStdout: true, script: 'cat $SSH_PRIVATE_KEY').trim()
                    }

                    // Execute rsync command using the retrieved private key
                    sh "echo '${privateKey}' | ssh -o StrictHostKeyChecking=no -l ${user} -i /dev/stdin ${targetHost} rsync -a --delete /mnt/ssd/nfs/worker-base-template/ /mnt/ssd/nfs/${worker}"
                }
            }
        }
    }
}
