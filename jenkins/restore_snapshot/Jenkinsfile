pipeline {
    agent any

    parameters {
        choice(
            choices: 'worker01\nworker02\nworker03',
            description: 'Select the worker',
            name: 'WORKER'
        )
    }

    stages {
        stage('Run rsync on Worker') {
            steps {
                script {
                    def worker = params.WORKER
                    echo "Selected worker: $worker"

                    // Define the target host and SSH credentials ID
                    def user = "root"
                    def targetHost = "192.168.1.210"
                    def sshCredentials = "jenkins-private-key-base64"

                    // Retrieve the SSH private key from the Jenkins credentials
                    def privateKey = credentials("${sshCredentials}")

                    // Create a temporary file to store the private key
                    def privateKeyFile = writeFile file: 'private_key', text: privateKey
                    sh "chmod 400 private_key"

                    // Add the private key to the SSH agent
                    sh "eval \$(ssh-agent -s)"
                    sh "ssh-add private_key"

                    // Execute rsync command remotely using ssh-agent
                    sh "ssh -o StrictHostKeyChecking=no ${user}@${targetHost} rsync -a --delete /mnt/ssd/nfs/worker-base-template/ /mnt/ssd/nfs/${worker}"
                }
            }
        }
    }
}
